generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  name        String
  email       String       @unique
  password    String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  profile     Image?
  roles       Role[]
  permissions Permission[]
  favorites   Product[]

  @@map("users")
}

model Role {
  id          String       @id @default(uuid())
  name        String       @unique
  description String
  createdAt   DateTime     @default(now())
  users       User[]
  permissions Permission[]

  @@map("roles")
}

model Permission {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  createdAt   DateTime @default(now())
  users       User[]
  roles       Role[]

  @@map("permissions")
}

model Image {
  id         String       @id @default(uuid())
  image_data Bytes
  image_type String
  image_name String
  Ingredient Ingredient[]
  Product    Product[]
  user       User         @relation(fields: [userId], references: [id])
  userId     String       @unique

  @@map("images")
}

model Ingredient {
  id          String    @id @default(uuid())
  description String
  name        String    @unique
  products    Product[]
  image       Image     @relation(fields: [image_id], references: [id])
  image_id    String

  @@map("ingredients")
}

model Product {
  id          String       @id @default(uuid())
  name        String       @unique
  description String
  price       Int
  image       Image        @relation(fields: [image_id], references: [id])
  image_id    String
  ingredients Ingredient[]
  categories  Category[]
  users       User[]

  @@map("products")
}

model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  description String
  products    Product[]

  @@map("categories")
}
